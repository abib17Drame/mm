<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/fondecran"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ListView
        android:id="@+id/listViewDernierDate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:layout_widthPercent="90%"
        app:layout_heightPercent="55%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginTopPercent="12%"
        app:layout_marginRightPercent="5%"/>
    <Button
        android:textSize="15dp"
        android:id="@+id/retourDernierDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="رجوع"
        app:layout_marginTopPercent="92%"/>
</android.support.percent.PercentRelativeLayout>
